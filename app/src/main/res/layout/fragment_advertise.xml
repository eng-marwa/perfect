<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    android:clipToPadding="false"
    app:layout_anchor="@layout/app_bar_main"
    app:layout_anchorGravity="bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/viewBg"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:elevation="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_camera" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Advertise with Perfect"
                    android:textSize="16sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/landtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="7dp"
                android:text="@string/land"
                android:textColor="#b90665"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/morelandtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:padding="7dp"
                android:textSize="17sp"
                android:layout_marginRight="7dp"
                android:text="@string/viewAll"
                android:textColor="@color/colorGray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/landtext"
                android:scrollbars="horizontal"
                android:padding="7dp"
                android:background="@color/viewBg"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/residentialText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="7dp"
                android:text="@string/residential"
                android:textColor="#b90665"
                android:textSize="20sp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/moreResidentialText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:padding="7dp"
                android:textSize="17sp"
                android:layout_marginRight="7dp"
                android:text="@string/viewAll"
                android:textColor="@color/colorGray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/residential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/residentialText"
                android:scrollbars="horizontal"
                android:padding="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/furnitureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="7dp"
                android:text="@string/furniture"
                android:textColor="#b90665"
                android:textSize="20sp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/moreFurnitureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:layout_marginRight="7dp"
                android:textSize="17sp"
                android:padding="7dp"
                android:text="@string/viewAll"
                android:textColor="@color/colorGray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/furniture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/furnitureText"
                android:scrollbars="horizontal"
                android:padding="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/ApplicanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="7dp"
                android:text="@string/appliances"
                android:textColor="#b90665"
                android:textSize="20sp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/moreApplicanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:padding="7dp"
                android:textSize="17sp"
                android:layout_marginRight="7dp"
                android:text="@string/viewAll"
                android:textColor="@color/colorGray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/applicance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ApplicanceText"
                android:scrollbars="horizontal"
                android:padding="7dp" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

